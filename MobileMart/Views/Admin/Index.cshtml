@{
    var data = Model.TotalOrders.Select(s => new ChartViewModel
    {
        y = (s.CreatedOn.Value.Year + "-" + s.CreatedOn.Value.Month).ToString(),
        b = s.Total.ToString(),
        a = s.SubTotal.ToString()
    }).ToList();
    string output = new JavaScriptSerializer().Serialize(data);

    List<PaiChartViewModel> list = new List<PaiChartViewModel>();
    list.Add(new PaiChartViewModel() { label = "Customers", value = Model.AllCustomersCount });
    list.Add(new PaiChartViewModel() { label = "Shops", value = Model.AllShopsCount });
    list.Add(new PaiChartViewModel() { label = "Products", value = Model.AllProductsCount });
    list.Add(new PaiChartViewModel() { label = "Admins", value = 1 });

    string output1 = new JavaScriptSerializer().Serialize(list);
}
<script>
    var data = @Html.Raw(output),
        config = {
            data: data,
            xkey: 'y',
            ykeys: ['b'],
            labels: [ 'Total'],
            fillOpacity: 0.6,
            hideHover: 'auto',
            behaveLikeLine: true,
            resize: true,
            pointFillColors: ['#ffffff'],
            pointStrokeColors: ['black'],
            lineColors: ['gray', 'red']
        };
    config.element = 'area-chart';
    Morris.Area(config);
    config.element = 'line-chart';
    Morris.Line(config);
    //config.element = 'bar-chart';
    //Morris.Bar(config);
    config.element = 'stacked';
    config.stacked = true;
    Morris.Bar(config);
    Morris.Donut({
        element: 'pie-chart',
        data: @Html.Raw(output1) 
        //[
        //    { label: "Friends", value: 30 },
        //    { label: "Allies", value: 15 },
        //    { label: "Enemies", value: 45 },
        //    { label: "Neutral", value: 10 }
        //]
    });
</script>
