@model IEnumerable<MobileMart.DB.ViewModel.CompanyDetailViewModel>

@{
    ViewBag.Title = "Companies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="by-brand-section mb-80">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title text-left mb-40">
                    <h2 class="uppercase">By Brands</h2>
                    <h6>There are many variations of passages of brands available,</h6>
                </div>
            </div>
        </div>
        <div class="by-brand-product">
            <div class="row active-by-brand slick-arrow-2">
                @foreach (var item in Model)
                {
                <!-- single-brand-product start -->
                <div class="col-xs-12">
                    <div class="single-brand-product">
                        <a href="@Url.Action("ProductsByBrand","Home", new { @item.CompanyId})"><img src="@Url.Content(item.Logo)?w=170&h=170&mode=stretch|" alt=""></a>
                        <h3 class="brand-title text-gray">
                            <a href="@Url.Action("ProductsByBrand","Home", new { @item.CompanyId})">@item.CompanyName</a>
                        </h3>
                    </div>
                </div>
                <!-- single-brand-product end -->
                }
            </div>
        </div>
    </div>
</div>