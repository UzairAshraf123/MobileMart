@model MobileMart.DB.ViewModel.ProductDetailViewModel

@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- SHOP SECTION START -->
<div class="shop-section mb-80">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-xs-12">
                <h2>Product Detail</h2>
                <!-- single-product-area start -->
                <div class="single-product-area mb-80">
                    <div class="row">
                        <!-- imgs-zoom-area start -->
                        <div class="col-md-5 col-sm-5 col-xs-12">
                            <div class="imgs-zoom-area">
                                <img id="zoom_03" src="@Url.Content(Model.ProductImage1)" data-zoom-image="@Url.Content(Model.ProductImage1)" alt="">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div id="gallery_01" class="carousel-btn slick-arrow-3 mt-30">
                                            <div class="p-c">
                                                <a href="#" data-image="@Url.Content(Model.ProductImage1)" data-zoom-image="@Url.Content(Model.ProductImage1)">
                                                    <img class="zoom_03" src="@Url.Content(Model.ProductImage1)" alt="">
                                                </a>
                                            </div>
                                            <div class="p-c">
                                                <a href="#" data-image="@Url.Content(Model.ProductImage2)" data-zoom-image="@Url.Content(Model.ProductImage2)">
                                                    <img class="zoom_03" src="@Url.Content(Model.ProductImage2)" alt="">
                                                </a>
                                            </div>
                                            <div class="p-c">
                                                <a href="#" data-image="@Url.Content(Model.ProductImage3)" data-zoom-image="@Url.Content(Model.ProductImage3)">
                                                    <img class="zoom_03" src="@Url.Content(Model.ProductImage3)" alt="">
                                                </a>
                                            </div>
                                            <div class="p-c">
                                                <a href="#" data-image="@Url.Content(Model.ProductImage4)" data-zoom-image="@Url.Content(Model.ProductImage4)">
                                                    <img class="zoom_03" src="@Url.Content(Model.ProductImage4)" alt="">
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- imgs-zoom-area end -->
                        <!-- single-product-info start -->
                        <div class="col-md-7 col-sm-7 col-xs-12">
                            <div class="single-product-info">
                                <h3 class="text-black-1">@Model.ProductName </h3>
                                <h6 class="brand-name-2">@Model.Company</h6>
                                <!-- hr -->
                                <hr>
                                <!-- single-product-tab -->
                                <div class="single-product-tab">
                                    <ul class="reviews-tab mb-20">
                                        <li class="active"><a href="#description" data-toggle="tab">description</a></li>
                                    </ul>
                                    <div class="tab-content">
                                        <div role="tabpanel" class="tab-pane active" id="description">
                                            <p>@Model.ProductDetail</p>
                                        </div>
                                    </div>
                                </div>
                                <!--  hr -->
                                <hr>
                                <div class="plus-minus-pro-action">
                                    <div class="sin-pro-action f-right">
                                        <ul class="action-button">
                                            <li>
                                                <h4>Quantity</h4>
                                                <input type="number" id="NumberField_@Model.ProductID" value="" min="1" class="numberfield">
                                            </li>
                                            <li class="btn-hover-2">
                                                <button title="Wishlist" value="@Model.ProductID" class="single_add_to_cart_button"><i class="glyphicon glyphicon-heart"></i>Add to Wish list</button>
                                            </li>
                                            <li class="btn-hover-2">
                                                <button type="button" value="@Model.ProductID" class="single_add_to_cart_button AddToCart" title="Add to cart"><i class="glyphicon glyphicon-shopping-cart"></i>Add to cart</button>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- single-product-info end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- SHOP SECTION END -->  

    