@model MobileMart.DB.ViewModel.ShopWithProductsViewModel
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Shop</h2>
    <div class="row clearfix well readcrumbs-section">
        <div class="col-md-2 column">
            <img class="img-thumbnail" alt="140x140" src="@Url.Content(Model.ShopDetail.Logo)" />
        </div>
        <div class="col-md-8 column">
            <blockquote>
                <h2>
                    @Model.ShopDetail.ShopName
                </h2>
                <address>
                    @Model.ShopDetail.ShopAddress
                    <cite>@Model.ShopDetail.City</cite>,
                    <cite> @Model.ShopDetail.Country</cite>
                    <p> @Model.ShopDetail.Mobile</p>
                </address>
            </blockquote>
        </div>
    </div>
</div>
<!-- Start page content -->
<div id="page-content" class="page-wrapper">
    <!-- SHOP SECTION START -->
    <div class="shop-section mb-80">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="shop-content">
                        <!-- shop-option start -->
                        <div class="shop-option box-shadow mb-30 clearfix">
                            <!-- Nav tabs -->
                            <ul class="shop-tab f-left" role="tablist">
                                <li class="active">
                                    <a href="#grid-view" data-toggle="tab"><i class="zmdi zmdi-view-module"></i></a>
                                </li>
                                <li>
                                    <a href="#list-view" data-toggle="tab"><i class="zmdi zmdi-view-list-alt"></i></a>
                                </li>
                            </ul>
                            <!-- showing -->
                            <div class="showing f-right text-right">
                                <span>Showing : 01-09 of 17.</span>
                            </div>
                        </div>
                        <!-- shop-option end -->
                        <!-- Tab Content start -->
                        <div class="tab-content">
                            <!-- grid-view -->
                            <div role="tabpanel" class="tab-pane active" id="grid-view">
                                <div class="row">
                                    <!-- product-item start -->
                                    @foreach (var item in Model.ProductDetail) { 
                                    <div class="col-md-3 col-sm-3 col-xs-12">
                                        <div class="product-item">
                                            <div class="product-img">
                                                <a href="@Url.Action("ProductDetail","Home", new { ID = item.ProductID } )">
                                                    <img src="@Url.Content(item.ProductImage1)?w=170&h=170&mode=stretch|" alt="" />
                                                </a>
                                            </div>
                                            <div class="product-info">
                                                <h6 class="product-title">
                                                    <a href="single-product.html">@item.ProductName </a>
                                                </h6>
                                                <h3 class="pro-price">Rs @item.price</h3>
                                                <ul class="action-button">
                                                    <li class="btn-hover-2">
                                                        <button href="#" title="Wishlist"><i class="glyphicon glyphicon-heart"></i></button>
                                                    </li>
                                                    <li class="btn-hover-2">
                                                        <button href="#" data-toggle="modal" data-target="#productModal_@item.ProductID" title="Quickview"><i class="glyphicon glyphicon-zoom-in"></i></button>
                                                    </li>
                                                    <li class="btn-hover-2">
                                                        <button type="button" value="@item.ProductID" class="AddToCart"  title="Add to cart"><i class="glyphicon glyphicon-shopping-cart"></i></button>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- product-item end -->
                                    <!-- START QUICKVIEW PRODUCT -->
                                    <div id="quickview-wrapper">
                                        <!-- Modal -->
                                        <div class="modal fade" id="productModal_@item.ProductID" tabindex="-1" role="dialog">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="modal-product clearfix">
                                                            <div class="product-images">
                                                                <div class="main-image images">
                                                                    <img alt="" src="@Url.Content(item.ProductImage1)">
                                                                </div>
                                                            </div><!-- .product-images -->

                                                            <div class="product-info">
                                                                <h1>@item.ProductName</h1>
                                                                <div class="price-box-3">
                                                                    <div class="s-price-box">
                                                                        <span class="new-price">Rs @item.price</span>
                                                                        @*<span class="old-price">£190.00</span>*@
                                                                    </div>
                                                                </div>
                                                                <a href="@Url.Action("ProductDetail","Home", new { ID = item.ProductID } )" class="see-all">See all features</a>
                                                                <div class="quick-add-to-cart">
                                                                    <div class="cart form-group">
                                                                        <div class="numbers-row">
                                                                            <input type="number" id="NumberField_@item.ProductID" class="numberfield" value="" min="1" >
                                                                        </div>
                                                                        <button type="button" value="@item.ProductID" class="single_add_to_cart_button AddToCart" title="Add to cart">Add to cart</button>
                                                                    </div>
                                                                </div>
                                                                <div class="quick-desc">
                                                                    <p>@item.ProductDetail</p>
                                                                </div>
                                                            </div><!-- .product-info -->
                                                        </div><!-- .modal-product -->
                                                    </div><!-- .modal-body -->
                                                </div><!-- .modal-content -->
                                            </div><!-- .modal-dialog -->
                                        </div>
                                        <!-- END Modal -->
                                    </div>
                                    <!-- END QUICKVIEW PRODUCT -->
                                    }
                                </div>
                            </div>
                            <!-- list-view -->
                            <div role="tabpanel" class="tab-pane" id="list-view">
                                <div class="row">
                                    @foreach (var item in Model.ProductDetail)
                                    {
                                        <!-- product-item start -->
                                        <div class="col-md-12">
                                            <div class="shop-list product-item">
                                                <div class="product-img">
                                                    <a href="single-product.html">
                                                        <img src="@Url.Content(item.ProductImage1)" alt="" />
                                                    </a>
                                                </div>
                                                <div class="product-info">
                                                    <div class="clearfix">
                                                        <h6 class="product-title f-left">
                                                            <a href="single-product.html">@item.ProductName</a>
                                                        </h6>
                                                    </div>
                                                    <h6 class="brand-name mb-30"></h6>
                                                    <h3 class="pro-price">$ @item.price</h3>
                                                    <p>@item.ProductDetail</p>
                                                    <ul class="action-button">
                                                        <li class="btn-hover-2">
                                                            <button href="#" title="Wishlist"><i class="glyphicon glyphicon-heart"></i></button>
                                                        </li>
                                                        <li class="btn-hover-2">
                                                            <button type="button" value="@item.ProductID" class="AddToCart" title="Add to cart"><i class="glyphicon glyphicon-shopping-cart"></i></button>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- product-item end -->
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- Tab Content end -->
                        @if (Model.Pager.EndPage > 1)
                        {
                            <ul class="shop-pagination box-shadow text-center ptblr-20-30">
                                @if (Model.Pager.CurrentPage > 1)
                                {
                                    <li>
                                        <a href="@Url.Action("Shop","Home")">First</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Shop","Home", new {shopID = Model.ShopDetail.ShopID ,page=Model.Pager.CurrentPage - 1 })"><i class="zmdi zmdi-chevron-left"></i></a>
                                    </li>
                                }

                                @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                                {
                                    <li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
                                        <a href="@Url.Action("Shop","Home", new {shopID = Model.ShopDetail.ShopID ,page=page})">@page</a>
                                    </li>}

                                @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                {
                                    <li>
                                        <a href="@Url.Action("Shop","Home", new {shopID = Model.ShopDetail.ShopID ,page=Model.Pager.CurrentPage + 1})"><i class="zmdi zmdi-chevron-right"></i></a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Shop","Home", new {shopID = Model.ShopDetail.ShopID ,page=Model.Pager.TotalPages})">Last</a>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>
               
            </div>
        </div>
    </div>

    <!-- SHOP SECTION END -->
</div>
<!-- End page content -->